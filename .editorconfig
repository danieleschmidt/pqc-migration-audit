# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

# 4 space indentation for Python files
[*.py]
indent_style = space
indent_size = 4
max_line_length = 88

# 2 space indentation for YAML, JSON, HTML, CSS, JavaScript
[*.{yml,yaml,json,html,css,js,ts}]
indent_style = space
indent_size = 2

# 4 space indentation for Java
[*.java]
indent_style = space
indent_size = 4
max_line_length = 120

# Tab indentation for Go (Go convention)
[*.go]
indent_style = tab
indent_size = 4

# 4 space indentation for C/C++
[*.{c,cpp,h,hpp}]
indent_style = space
indent_size = 4
max_line_length = 100

# 2 space indentation for Markdown
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# Makefile uses tabs
[Makefile]
indent_style = tab

# Shell scripts
[*.{sh,bash}]
indent_style = space
indent_size = 2

# Docker files
[{Dockerfile,*.dockerfile}]
indent_style = space
indent_size = 2

# Configuration files
[*.{toml,ini,cfg}]
indent_style = space
indent_size = 2
EOF < /dev/null
